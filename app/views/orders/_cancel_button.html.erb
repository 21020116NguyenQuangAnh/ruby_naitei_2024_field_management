<%= form_for @order, url: order_path(@order), html: {class: "w-3/4"} do |f| %>
  <%= f.hidden_field :status, value: yield(:status_text) %>
  <% if @order.approved? %>
    <%=  text_area_tag :reason, params[:reason], placeholder: t("orders.delete.reason"),
                                class: "block w-full bg-gray-100 border-red-300 border-2 mt-2 h-32 shadow-sm focus:ring-0 focus:border-primary rounded-md" %>
  <% end %>
  <%= f.submit t("orders.edit.cancel"), class: "block mx-auto mt-10 bg-red-500 w-40 h-14 rounded-lg text-white font-semibold text-xl hover:opacity-50 transition-opacity cursor-pointer",
      data: { turbo_confirm: t("orders.edit.confirm") } %>
<% end %>
