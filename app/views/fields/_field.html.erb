<div class="w-full rounded-md bg-white drop-shadow-xl hover:scale-110 transition-transform">
  <%= link_to (image_tag get_image(field),
      alt: field.name,
      class: "h-52 rounded-t-lg object-cover w-full"),
      field
  %>
  <div class="px-6 py-5">
    <h3 class="font-medium text-xl"><%= field.name %></h3>
    <p class="text-md mt-2 mb-1 line-clamp-2"><%= field.description %></p>
    <%= link_to t(".view_details"), field_path(field), class: "underline text-sm text-secondary py-4" %>
  </div>
</div>
