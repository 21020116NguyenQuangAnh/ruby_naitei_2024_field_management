<div class="w-full rounded-md bg-white drop-shadow-xl hover:scale-110 transition-transform">
  <%= link_to (image_tag get_image(field),
      alt: field.name,
      class: "h-52 rounded-t-lg object-cover w-full"),
      field
  %>
  <div class="px-6 py-5">
    <div class="flex justify-between items-center">
      <h3 class="font-medium text-xl flex-1 line-clamp-1"><%= field.name %></h3>
      <strong class="text-secondary font-normal text-sm w-14 text-right">
        <span><%= fa_icon "star" %></span>
        <%= field.average_rating < 1 ? field.average_rating.floor : field.average_rating %>
      </strong>
    </div>
    <strong class="font-semibold text-primary text-lg block mt-1">
      <%= exchange_money field.default_price %>
    </strong>
    <strong class="text-base font-normal block mt-0.5">
      <%= pluralize field.field_type.capacity, t(".person") %>,
      <%= t ".#{field.field_type.ground}" %>
    </strong>
    <%= link_to t(".view_details"), field_path(field), class: "block underline text-sm text-secondary py-2 font-light" %>
  </div>
</div>
