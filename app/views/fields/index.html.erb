<div class="flex justify-between items-center">
  <div class="flex gap-10 items-center">
    <%= render "shared/search_bar", search_path: fields_path %>
    <%= render "filters" %>
  </div>
</div>
<% if @fields.present? %>
  <%= render "shared/search_result", search_input: params[:search], success: true %>
  <section class="grid grid-cols-4 gap-x-24 gap-y-14 mt-10 mb-24">
    <%= render @fields %>
  </section>
  <%== pagy_nav @pagy %>
<% else %>
  <%= render "shared/search_result", search_input: params[:search], success: false %>
<% end %>
