<div class="flex items-center w-full">
  <div class="flex-grow border-t border-gray-300"></div>
  <span class="flex-shrink mx-4 text-gray-500"><%= t ".or" %></span>
  <div class="flex-grow border-t border-gray-300"></div>
</div>

<div class="mt-4 flex justify-center items-center">
  <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, :data => {turbo: "false"},
  class: "bg-blue-500 text-white text-xl font-semibold py-2 px-4 border border-gray-300 rounded-md shadow-sm
          space-x-2 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
    <i class="fa fa-google text-xl mr-2"></i>
    <span><%= t ".continue" %></span>
  <% end %>
</div>
